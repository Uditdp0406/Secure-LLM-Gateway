# ==========================================================
# SECURE LLM GATEWAY - ENVIRONMENT CONFIGURATION TEMPLATE
# ==========================================================
# Copy this file to `.env` and fill in required values.
# Do NOT commit your real `.env` file to GitHub.
# ==========================================================


# ==========================================================
# SERVER CONFIGURATION
# ==========================================================

PORT=3000
NODE_ENV=development


# ==========================================================
# AUTHENTICATION
# ==========================================================

# Gateway API Key (Required in production)
GATEWAY_API_KEY=dev-gateway-key

# JWT Secret (Required if using JWT auth)
JWT_SECRET=your_jwt_secret_here


# ==========================================================
# REDIS CONFIGURATION (REQUIRED)
# ==========================================================

# Example:
# redis://default:password@host:port
REDIS_URL=redis://default:your_password@localhost:6379


# ==========================================================
# FEATURE FLAGS
# ==========================================================

CACHE_ENABLED=true
RAG_ENABLED=true


# ==========================================================
# GLOBAL TIMEOUT
# ==========================================================

GLOBAL_TIMEOUT=35000


# ==========================================================
# RATE LIMITING
# ==========================================================

RATE_LIMIT_WINDOW_MS=60000
USER_MAX_RPM=60
ADMIN_MAX_RPM=300


# ==========================================================
# RAG CONFIGURATION
# ==========================================================

RAG_TOP_K=3
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=150
RAG_HYBRID_ALPHA=0.7
RAG_HYBRID_BETA=0.3


# ==========================================================
# CIRCUIT BREAKER
# ==========================================================

CB_FAILURE_THRESHOLD=5
CB_RECOVERY_TIME=30000


# ==========================================================
# OPENAI CONFIGURATION (OPTIONAL - REQUIRED FOR PROD)
# ==========================================================

OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TIMEOUT=30000


# ==========================================================
# ANTHROPIC CONFIGURATION (OPTIONAL)
# ==========================================================

ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TIMEOUT=30000


# ==========================================================
# COST CONFIGURATION (PER 1K TOKENS)
# ==========================================================

COST_GPT4=0.03
COST_GPT4O=0.005
COST_GPT35=0.002
COST_CLAUDE_SONNET=0.003


# ==========================================================
# LOGGING
# ==========================================================

LOG_LEVEL=info
